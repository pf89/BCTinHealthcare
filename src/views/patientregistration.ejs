<%- include partials/headerregister.ejs %>
<div class="container" style="width: 650px;">
    <h2 class="text-center">Registration as a Patient</h2>
    <br/>
    <br/>
    <div id="pa">
        <form id="paform" method="post">
            <input hidden name="User" value="Patient">
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="NamePA">Name</label>
                    <input type="text" class="form-control" id="NamePA" name="Name">
                </div>
                <div class="form-group col-sm-6">
                    <label for="PasswordPA">Password</label>
                    <input type="password" class="form-control" id="PasswordPA" name="Password">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="EmailPa">Email</label>
                    <input type="email" class="form-control" id="EmailPa" name="Email">
                </div>
                <div class="form-group col-sm-6">
                    <label for="TelephonePa">Telephone Number</label>
                    <input type="text" class="form-control" id="TelephonePa" name="Telephone">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="AddressPa">Address</label>
                    <input type="text" class="form-control" id="AddressPa" placeholder="1234 Main St" name="Address">
                </div>
            </div>

            <div class="form-row">
                <div class="col-sm-6">
                    <label for="CityPa">City</label>
                    <input type="text" class="form-control" id="CityPa" placeholder="Berlin" name="City">
                </div>
                <div class="form-group col-sm-4">
                    <label for="StatePa">State</label>
                    <input id="StatePa" class="form-control" placeholder="Germany" name="State">
                </div>
                <div class="form-group col-sm-2">
                    <label for="ZipPa">Zip</label>
                    <input type="text" class="form-control" id="ZipPa" placeholder="10178" name="ZIP">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-4">
                    <label for="WeightPa">Gender</label>
                    <select class="form-control" name="Gender" id="GenderPa">
                        <option disabled selected value> -- select an option -- </option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
                <div class="form-group col-sm-4">
                    <label for="WeightPa">Weight</label>
                    <input id="WeightPa" class="form-control" name="Weight">
                </div>
                <div class="form-group col-sm-4">
                    <label for="HeightPa">Height</label>
                    <input type="text" class="form-control" id="HeightPa" name="Height">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="IbanPA">IBAN</label>
                    <input type="text" class="form-control" id="IbanPA" name="IBAN">
                </div>
                <div class="form-group col-sm-6">
                    <label for="BicPA">BIC</label>
                    <input type="text" class="form-control" id="BicPA" name="BIC">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-4">
                    <button type="submit" class="btn btn-primary" formaction="/user/add">Sign up</button>
                </div>
            </div>
        </form>
        <p>Notice: After the registration an address will be created with which you can login the next time.</p>
    </div>
</div>
<%- include partials/footer.ejs %>