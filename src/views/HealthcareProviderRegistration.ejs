<%- include partials/headerRegister.ejs %>
<div class="container" style="width: 650px;">
    <h2 class="text-center">Registration as a Healthcare Provider</h2>
    <br/>
    <br/>
<div id="hp">
    <form id="hpform" method="post">
        <input hidden name="User" value="Healthcare Provider">
        <div class="form-row">
            <div class="form-group col-sm-6">
                <label for="NameHP">Name</label>
                <input type="text" class="form-control" id="NameHP" name="Name">
            </div>
            <div class="form-group col-sm-6">
                <label for="PasswordHP">Password</label>
                <input type="password" class="form-control" id="PasswordHP" name="Password">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-sm-6">
                <label for="EmailHP">Email</label>
                <input type="email" class="form-control" id="EmailHP" name="Email">
            </div>
            <div class="form-group col-sm-6">
                <label for="TelephoneHP">Telephone Number</label>
                <input type="text" class="form-control" id="TelephoneHP" name="Telephone">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-sm-12">
                <label for="AddressHP">Address</label>
                <input type="text" class="form-control" id="AddressHP" placeholder="1234 Main St" name="Address">
            </div>
        </div>

        <div class="form-row">
            <div class="col-sm-6">
                <label for="CityHP">City</label>
                <input type="text" class="form-control" id="CityHP" placeholder="Berlin" name="City">
            </div>
            <div class="form-group col-sm-4">
                <label for="StateHP">State</label>
                <input id="StateHP" class="form-control" placeholder="Germany" name="State">
            </div>
            <div class="form-group col-sm-2">
                <label for="ZipHP">Zip</label>
                <input type="text" class="form-control" id="ZipHP" placeholder="10178" name="ZIP">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-sm-12">
                <label for="SpecialicationPa">Provider Specialization</label>
                <input type="text" class="form-control" id="SpecialicationPa" placeholder="Gerneral Practitioner" name="Specialization">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-sm-12">
                <label for="DescriptionPa">Service Description</label>
                <input type="text" class="form-control" id="DescriptionPa" placeholder="Standard Treatment" name="Description">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-sm-12">
                <label for="GeneralPa">General Comment</label>
                <textarea rows="5" type="text" class="form-control" id="GeneralPa" name="Comment"></textarea>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-sm-4">
                <button type="submit" class="btn btn-primary" formaction="/user/add">Sign up</button>
            </div>
        </div>
    </form>
    <p>Notice: After the registration an address will be created with which you can login the next time.</p>
</div>
</div>
<%- include partials/footer.ejs %>